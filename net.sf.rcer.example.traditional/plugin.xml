<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="net.sf.rcer.example.traditional.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="net.sf.rcer.example.traditional.Perspective"
            id="net.sf.rcer.example.traditional.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.name"
            class="net.sf.rcer.example.traditional.View"
            id="net.sf.rcer.example.traditional.view">
      </view>
   </extension>

</plugin>
